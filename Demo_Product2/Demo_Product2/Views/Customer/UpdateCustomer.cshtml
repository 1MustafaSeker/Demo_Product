@model EntityLayer.Concrete.Customer

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    @Html.Label("Müşteri Id")
    @Html.TextBoxFor(c=>c.Id,new{@class="form-control"})
    <br />
    @Html.Label("Müşteri Ad")
    @Html.TextBoxFor(c=>c.Name,new{@class="form-control"})
    <br />
    @Html.Label("Müşteri Şehir")
    @Html.TextBoxFor(c=>c.City,new{@class="form-control"})
    <br />
    @Html.Label("Lütfen Meslek Seçiniz")
    @Html.DropDownListFor(x=>x.JobId,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
    <br />
    <button class="btn btn-primary">Ekle</button>

</form>

